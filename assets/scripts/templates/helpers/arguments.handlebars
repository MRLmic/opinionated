{{#each arguments as |argument|}}

{{#if argument.position}}
  <div data-id="{{argument.id}}" contenteditable="false" class="pro-point">
    {{argument.content}}<br><section data-id="{{argument.id}}"class="button-group"><button type="button" name="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></button>
    <button type="button" data-toggle="tooltip" title="click once then click on text to edit, then click again to submit" name="button" class="edit btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
  </section>
  </div>
  {{else}}
  <div data-id="{{argument.id}}" contenteditable="false" class="con-point">
    {{argument.content}}<br><section data-id="{{argument.id}}" class="button-group"><button type="button" name="button" class="del-arg btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></button>
    <button data-toggle="tooltip" title="click once then click on text to edit, then click again to submit" type="button" name="button" class="edit btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
  </section>
  </div>
{{/if}}
{{/each}}
